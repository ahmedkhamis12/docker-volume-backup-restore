# .env (example template)

# SSH username for the remote backup server
REMOTE_USER=your_ssh_username

# IP address or hostname of the remote server where backups are stored
REMOTE_HOST=your.remote.server

# Path to your private SSH key (must have access to the remote server)
SSH_KEY_PATH=./path/to/your/private_key.pem

# Directory on the remote server where backups will be stored
REMOTE_BACKUP_PATH=/home/your_user/backups

# Local directory where restored backups will be saved
LOCAL_BACKUP_DIR=./restored_backups
